<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registration form</title>
  <link rel="stylesheet" href="style.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
  <!-- MDB -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css" rel="stylesheet" />
</head>

<body class="bg-gray-300" style="font-family:Georgia, 'Times New Roman', Times, serif;">
  <section>
    <div class="container py-5">
      <div class="row">
        <div class="col">
          <a href="/home">
            <h2 class="text-center">AGO</h2>
          </a>
        </div>
      </div>
    </div>
  </section>

  <div class=" flex items-center justify-center">
    <form class="w-full md:w-1/3 bg-black rounded-lg items-center" onsubmit="return validateForm()"
      action="/register/add_register" enctype="multipart/form-data" method="post">
      <div class="
      flex font-bold justify-center mt-6">
        <img class="h-24 w-24 rounded-full mb-8"
          src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="">
      </div>
      <h2 class="text-3xl text-center text-white mb-4">Employee Registration</h2>
      <div class="px-12 pd-10">
        <div class="w-full mb-2">

          <div>
            <label class="text-white dark:text-gray-200" for="passwordConfirmation">Date</label>
            <input id="date" type="date" value="2022-07-22" placeholder="" name="Date"
              class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring"
              required>
          </div>
        </div>
        <div class="mb-3">
          <label class="text-white dark:text-gray-200" for="exampleFormControlInput1">Employee name</label>
          <input id="empl" type="text" placeholder="Rahil Shaikh" name="Name" autocomplete="off"
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring"
            required>

        </div>
        <div class="mb-3">
          <label class="text-white dark:text-gray-200" for="exampleFormControlInput1">Password</label>
          <input id="empl" type="password" placeholder="password" name="password" autocomplete="off"
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring"
            required>

        </div>
        <div class="mb-3">
          <label class="text-white dark:text-gray-200" for="exampleFormControlInput1">Contact no</label>
          <input id="contact" type="number" name="Mobile_No" pattern="\d*" maxlength="10" placeholder="9876543210"
            title="Ten digits code" autocomplete="off" required
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring">
        </div>
        <div class="mb-3">
          <label class="text-white dark:text-gray-200" for="exampleFormControlTextarea1">Permanant
            Address</label>
          <input id="exampleFormControlTextarea1" autocomplete="off" type="text" name="Permanent_Address"
            placeholder="Address"
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring"
            required>
        </div>
        <div class="mb-3">
          <label class="text-white dark:text-gray-200" for="exampleFormControlTextarea1">Temprory Address</label>
          <input type="text" name="Temporary_Address" id="exampleFormControlTextarea1" placeholder="Address"
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring"
            required>
        </div>
        <div class="mb-3">
          <label class="text-white dark:text-gray-200" for="formGroupExampleInput">Education</label><br>
          <select name="Education"
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring">
            <option value="10th_pass">10th pass</option>
            <option value="12th_pass">12th pass</option>
            <option value="graduation">graduation</option>
            <option value="post-graduation">post-graduation</option>
          </select>
          <input type="file" name="Education_certificate" pattern="\d*" maxlength="220"
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring"
            required>
        </div>
        <div class="mb-3">
          <label class="text-white dark:text-gray-200" for="formGroupExampleInput">Date of birth</label>
          <input type="date" value="2000-07-22" placeholder="" name="Date_Of_Birth" id="formGroupExampleInput" required
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring"
            required>
        </div>
        <div class="mb-3">
          <label class="text-white dark:text-gray-200" for="username">Aadhar No</label>
          <input type="text" placeholder="Aadhar No" name="Aadhar_No" pattern="\d*" maxlength="12"
            id="formGroupExampleInput"
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring"
            required>
          <input type="file" name="Aadhar_img"
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring"
            required multiple>

        </div>
        <div class="mb-3">
          <label class="text-white dark:text-gray-200" for="username">Pan No.</label>
          <input type="text" placeholder="Pan No" name="Pan_No"  maxlength="10" id="formGroupExampleInput"
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring"
            required>
          <input type="file" name="Pan_img" pattern="\d*" maxlength="220"
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring"
            required multiple>

        </div>
        <div class="mb-3">
          <label class="text-white dark:text-gray-200" for="username">Resume</label>

          <input type="file" id="resume" pattern="\d*" maxlength="220"
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring"
            name="resume" required multiple>

        </div>
        <div class="mb-3">
          <label for="exampleFormControlTextarea1" class="text-white">Emergency contact :</label>
          <input type="number" autocomplete="off" required
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring"
            name="Emergency_Contact_No" placeholder="Contact No" pattern="\d*" maxlength="10" aria-label="contact">
        </div>
        <div class="mb-3">
          <label for="exampleFormControlTextarea1" class="text-white">WORK EXPERIENCE :</label>
          <input class="form-check-input" name="Work_Experience" type="radio" id="inlineCheckbox1" value="YES">
          <label class="text-white" autocomplete="off" for="inlineCheckbox1">YES</label>
          <input class="form-check-input" name="Work_Experience" type="radio" id="inlineCheckbox2" value="NO">
          <label class="text-white" autocomplete="off" for="inlineCheckbox2">NO</label>
        </div>
        <div>
          <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="text-white">Previous Compony Name</label>
            <input type="text" autocomplete="off" required
              class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring"
              name="Work_details" placeholder="previous compony name" aria-label="contact">
          </div>
          <button name="absolute"
            class="w-full mt-6 py-2 leading-5 text-white transition-colors duration-200 transform bg-pink-500 rounded-full hover:bg-pink-700 focus:outline-none focus:bg-gray-600"
            type="submit"> SUBMIT</button>


          <button type="reset"
            class="w-full text-decoration-line: underline mt-6 px-6 py-2 leading-5 text-white focus:outline-none ">RESET</button>
        </div>
      </div>
    </form>
  </div>
  <script>
    function validateForm() {

      let x = document.forms["myForm"]["password"].value;
      console.log(x);
      if (x == "") {
        alert("Name must be filled out");
        return false;
      }
    }
  </script>
</body>

</html>